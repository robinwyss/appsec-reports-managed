# Dynatrace Configuration
# Copy this file to .env and fill in your actual values

# Dynatrace Environment URL (e.g., https://xxxyyyyy.live.dynatrace.com)
DYNATRACE_ENV=

# Dynatrace API Token (requires scopes: securityProblems.read, entities.read, ReadConfig)
DYNATRACE_TOKEN=

# Number of days to look back for vulnerabilities (default: 7)
DAYS=7

# Output directory for reports (default: ./reports)
OUTPUT_DIR=./reports

# Skip SSL certificate validation (true/false, default: false)
INSECURE=false

# Enable debug logging (true/false, default: false)
DEBUG=false
